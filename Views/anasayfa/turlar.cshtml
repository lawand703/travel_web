@using WebApplication4.Models
@model List<detaylar>


@{
    ViewBag.Title = "turlar";
    Layout = "~/Views/shared/layout.cshtml";
}
 <style>
    #turlar {
        height: 100vh;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }


    .tur_container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px; /* İsteğe bağlı: öğeler arasındaki boşluk */
    }

    .tur {
        width: 100%; /* Öğenin genişliği */
        height: 330px; /* Öğenin yüksekliği */
        margin-bottom: 30px;
        padding: 20px;
        border-radius: 5px;
        position: relative;
        overflow: hidden;
    }
       
    

    .kulturel {
        position: relative;
        background-image: url(../../images/Kültürel\ Geziler.jpeg); /* PNG formatında bir görüntü kullanın */
        background-size: cover;
        background-position: center;
        border-radius: 40px;
    }

    .ozel {
        background-image: url(../../images/Özel\ Turlar.jpg);
        background-size: cover; /* Resmi kutunun tamamına yayacak şekilde boyutlandırır */
        background-position: center; /* Resmi kutunun ortasına yerleştirir */
        border-radius: 40px;
    }

    .doga {
        background-image: url(../../images/doga3.jpg);
        background-size: cover; /* Resmi kutunun tamamına yayacak şekilde boyutlandırır */
        background-position: center; /* Resmi kutunun ortasına yerleştirir */
        border-radius: 40px;
    }

    .sehir {
        background-image: url(../../images/sehir2.jpg);
        background-size: cover; /* Resmi kutunun tamamına yayacak şekilde boyutlandırır */
        background-position: center; /* Resmi kutunun ortasına yerleştirir */
        border-radius: 40px;
    }

        .kulturel h3,
        .ozel h3,
        .doga h3,
        .sehir h3 {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 2;
            margin: 0;
            color: #fff; /* Metin rengini beyaz veya istediğiniz bir renk yapın */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* İsteğe bağlı: metine gölge ekleyin */
        }


    .tur h3 {
        font-size: 1.5em;
        margin-bottom: 10px;
        z-index: 2;
    }

    .tur p {
        color: #666;
        line-height: 1.4;
        margin-bottom: 15px;
        z-index: 2;
    }

    .tur strong {
        color: #f7df1e;
    }

    .tur a {
        display: inline-block;
        padding: 8px 15px;
        background-color: #f7df1e;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        z-index: 2;
    }

        .tur a:hover {
            background-color: #333;
        }

        .tur a:hover {
            background-color: #333;
        }
</style>


<section id="turlar">
    <div class="tur_container">

        <div class="kulturel">
            <div class="tur">
                <h3 style="color:white;">kültrürel</h3>
                @if (Model.Count > 0)
                {
                    var detaylarim = Model[0]; // İstediğiniz indeksi kullanabilirsiniz.
                    var specificId = 2;
                    <a href="@Url.Action("detaylar", "detaylar", new { id = specificId })">Detaylar</a>
                }
                else
                {
                    <p>Detay bulunamadı.</p>
                }
            </div>
        </div>

        <div class="ozel">
            <div class="tur">
                <h3 style="color:white;">özel</h3>

                @if (Model.Count > 0)
                {
                    var detaylarim = Model[0]; // İstediğiniz indeksi kullanabilirsiniz.
                    var specificId = 3;

                    <a href="@Url.Action("detaylar", "detaylar", new { id = specificId })">Detaylar</a>
                }
                else
                {
                    <p>Detay bulunamadı.</p>
                }


            </div>
        </div>

        <div class="doga">
            <div class="tur">
                <h3 style="color:white;">doğa keşfi</h3>
                @if (Model.Count > 0)
                {
                    var detaylarim = Model[0]; // İstediğiniz indeksi kullanabilirsiniz.
                    var specificId = 1;
                    <a href="@Url.Action("detaylar", "detaylar", new { id = specificId })">Detaylar</a>
                }
                else
                {
                    <p>Detay bulunamadı.</p>
                }
            </div>
        </div>

        <div class="sehir">
            <div class="tur">
                <h3 style="color:white;">şehir</h3>
                @if (Model.Count > 0)
                {
                    var detaylarim = Model[0]; // İstediğiniz indeksi kullanabilirsiniz.
                    var specificId = 4;
                    <a href="@Url.Action("detaylar", "detaylar", new { id = specificId })">Detaylar</a>
                }
                else
                {
                    <p>Detay bulunamadı.</p>
                }
            </div>
        </div>

    </div>

    <!-- Başka turlar buraya eklenebilir -->
</section>

