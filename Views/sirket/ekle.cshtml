@{
    ViewBag.Title = "ekle";
    Layout = "~/Views/shared/layout.cshtml";
}
<link href="~/Content/ekle.css" rel="stylesheet" />
<h2>ekle</h2>



<div class="container">
    <h2>Şirket Bilgi Formu</h2>
    <form method="post" id="company-form">
        <div class="form-group">
            <label for="company-name">Şirket Adı</label>
            <input type="text" id="company-name" name="name" required>
        </div>
        <div class="form-group">
            <label for="company-phone">Telefon Numarası</label>
            <input type="tel" id="company-phone" ad="phone" required>
            <span id="phone-error" style="color: red; display: none;">Telefon numarası 10 haneli olmalıdır!</span>
        </div>
        <div class="form-group">
            <label for="company-address">Adres</label>
            <textarea id="company-address" name="address" required></textarea>
        </div>
        <div class="form-group">
            <button type="submit">Bilgileri Gönder</button>
        </div>
    </form>
</div>

<script>
    const form = document.getElementById('company-form');
    const phoneInput = document.getElementById('company-phone');
    const phoneError = document.getElementById('phone-error');

    form.addEventListener('submit', function (event) {
        if (phoneInput.value.length !== 10) {
            phoneError.style.display = 'block';
            event.preventDefault();
        } else {
            phoneError.style.display = 'none';
        }
    });
</script>




